<?xml version="1.0"?>
<ruleset name="MyApp">
    <description>Coding standard for MyApp</description>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="80"/>
    <arg name="colors"/>
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>public</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>
    <file>database/factories</file>
    <file>database/seeders</file>
    <file>app/Http/Controllers</file>
    <file>app/Models</file>
    <exclude-pattern>vendor/*</exclude-pattern>
</ruleset>
